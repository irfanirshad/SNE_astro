                <div class="column">
                    <img src="/assets/images/home/customers/byjus1.png" alt="Byju's">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/chai1-trimmy.jpg" alt="Chai">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/mb-trimmy.jpg" alt="MB">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/jmfl1.png" alt="JMFL">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/ng.jpg" alt="NG">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/icici.png" alt="ICICI">
                </div>
                <!-- Repeat the images to create a continuous loop effect -->
                <div class="column">
                    <img src="/assets/images/home/customers/byjus1.png" alt="Byju's">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/chai1-trimmy.jpg" alt="Chai">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/mb-trimmy.jpg" alt="MB">
                </div>
                <div class="column">
                    <img src="/assets/images/home/customers/jmfl1.png" alt="JMFL">
                </div>
