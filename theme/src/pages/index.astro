			</section>
		</Container>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}

	/* Partner section container to ensure the images stay within bounds and slide smoothly */
.partner-section {
    overflow: hidden;
    white-space: nowrap;
    box-sizing: border-box;
    position: relative;
}

/* Slider that will be animated to create the sliding effect */
.slider {
    display: inline-block;
    animation: slide 20s linear infinite;
}

/* Individual columns for each partner image */
.column {
    display: inline-block;
    padding: 0 20px; /* Adjust padding as necessary */
}

/* Styling for images to ensure they fit well within their container */
.column img {
    height: 130px;
    width: auto; /* Maintain aspect ratio */
    object-fit: contain; /* Ensure the image fits within its container without distortion */
}

/* Keyframes to animate the slider from right to left */
@keyframes slide {
    0% {
        transform: translateX(100%);
    }
    100% {
        transform: translateX(-100%);
    }
}

/* Feature card section styling */
.feature-card__section {
    margin: var(--section-margin) auto;
}

/* Grid layout for feature cards */
.feature-card__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--theme-grid-gap);
}

/* Responsive adjustment for smaller screens */
@media (max-width: 768px) {
    .feature-card__grid {
        grid-template-columns: 1fr;
    }
}

</style>
