<!-- better form submission script service which handles more fields and is free for use -->
<form action="https://formsubmit.co/ibm2014002@iiita.ac.in" method="POST">
	<input
		type="hidden"
		name="_subject"
		value="Message from website's contact form"
	/>
	<input type="hidden" name="_template" value="table" />
	<FormInput
		type="text"
		name="name"
		label="Name"
		placeholder="Your Name"
		required
	/>
	<input
		type="hidden"
		name="_blacklist"
		value="spammy, spam, bot , wp, porn, xxx, porno, banned, term, phrase"
	/>
	<FormInput
		type="email"
		label="Email"
		name="email"
		placeholder="Email Address"
		required
	/>
	<input
		type="hidden"
		name="_autoresponse"
		value="your custom message.THANKYOU FOR SUBMISSiOn"
	/>
	<FormInput
		type="text"
		label="Message"
		name="Message"
		placeholder="Drop your number here and let us give you a free consult."
		required
	/>
	<input type="hidden" name="_next" value="http://snechennai.com/submission/thankyou" />
	<input type="text" name="_honey" style="display:none" />
	<button type="submit">Send</button>
</form>

<style>
	form {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
	}
</style>
